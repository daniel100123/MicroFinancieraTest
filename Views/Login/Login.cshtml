<body class="app app-login p-0">
  <div class="row g-0 app-auth-wrapper">
    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
      <div class="d-flex flex-column align-content-end">
        <div class="app-auth-body mx-auto">
          <div class="app-auth-branding mb-4"><a class="app-logo"><img class="logo-icon me-2" src="~/img/iconNaby.jpeg" alt="logo"></a></div>
          <h2 class="auth-heading text-center mb-5">𝗠𝗜𝗖𝗥𝗢𝗙𝗜𝗡𝗔𝗡𝗖𝗜𝗘𝗥𝗔 𝗡𝗔𝗕𝗬</h2>
          <div class="auth-form-container text-start">
            <form class="auth-form login-form">
              <div class="email mb-3">
                <label class="sr-only" for="signin-email">Usuario</label>
                <input id="email" type="email" class="form-control signin-email" placeholder="Email address" required="required">
              </div><!--//form-group-->
              <div class="password mb-3">
                <label class="sr-only" for="signin-password">Password</label>
                <input id="password" type="password" class="form-control signin-password" placeholder="Password" required="required">
                <!--<div class="extra mt-3 row justify-content-between">
                  <div class="col-6">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="" id="RememberPassword">
                      <label class="form-check-label" for="RememberPassword">
                        Remember me
                      </label>
                    </div>
                  </div>-->
                <!--//col-6-->
                <!--<div class="col-6">
                  <div class="forgot-password text-end">
                    <a href="reset-password.html">Forgot password?</a>
                  </div>
                </div>-->
                <!--//col-6-->
                <!--</div>--><!--//extra-->
              </div><!--//form-group-->
              <div class="text-center">
                <button type="button" class="btn app-btn-primary w-100 theme-btn mx-auto" id="btnLogin" onclick="Login()">Log In</button>
              </div>
            </form>

            @*<div class="auth-option text-center pt-5">No Account? Sign up <a class="text-link" href="signup.html">here</a>.</div>*@
          </div><!--//auth-form-container-->

        </div><!--//auth-body-->


      </div><!--//flex-column-->
    </div><!--//auth-main-col-->
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
      <div class="auth-background-holder">
      </div>
      <div class="auth-background-mask"></div>

    </div><!--//auth-background-col-->

  </div><!--//row-->


</body>
</html>

<script>

  function saveItem() {
    var item = {
      Usuario: $('#email').val(),
      Contrasenia: $('#password').val(),
    };

    return item;
  }

  async function Login() {

    var request = {
      "request": JSON.stringify(saveItem()),
    }

    var url = '@Url.Action("AuthenticateAdmin", "Login")';
    $.ajax({
      type: "POST",
      traditional: true,
      async: false,
      cache: false,
      url: url,
      context: document.body,
      data: request,
      //   dataType: "json",
      beforeSend: function () {
        $("#email").prop("disabled", true);
        $("#password").prop("disabled", true);
        $("#btnLogin").prop("disabled", true);
        $("#btnLogin").html(`<i class="fa fa-spinner fa-pulse"></i> Validado Información...`);
      },
      success: function (response) {
        if (!response.ok) {

          $("#btnLogin").prop("disabled", false);
          $("#email").prop("disabled", false);
          $("#password").prop("disabled", false);
          $("#btnLogin").html(`<i class="fa fa-sign-in-alt"></i> Entrar`);
                    Swal.fire(
                        'Error!',
                        response.message,
                        'error'
                    );
        }
        else {
          localStorage.setItem('UserLogin', JSON.stringify(response.data));
          //window.location = "/Home/Main";
          setTimeout(function () {
            location.href = "@Url.Content("~/Home/Index")";
          }, 500);
        }
      },
      error: function (response) { }

    });

  }
</script>



